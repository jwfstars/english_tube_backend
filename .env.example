# ===========================================
# Docker Compose 配置
# ===========================================
DB_USER=english_tube
DB_PASSWORD=change_me_in_production_strong_password
DB_NAME=english_tube
DB_PORT=5432
BACKEND_PORT=8002

# ===========================================
# 数据库配置（生产环境）
# ===========================================
# 注意：在 docker-compose 中，数据库主机名是服务名 "postgres"
DATABASE_URL=postgresql://english_tube:change_me_in_production_strong_password@postgres:5432/english_tube
ASYNC_DATABASE_URL=postgresql+asyncpg://english_tube:change_me_in_production_strong_password@postgres:5432/english_tube

# ===========================================
# JWT 认证配置
# ===========================================
# 生产环境必须使用强密钥！建议使用以下命令生成：
# openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_64_CHARACTER_HEX_STRING_IN_PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ===========================================
# 对象存储配置（可选）
# ===========================================
# 注意：当前项目视频使用腾讯云VOD，图片使用URL直接引用
# 如果需要上传图片到对象存储，可以使用腾讯云COS
# TOS_ACCESS_KEY=your-tos-access-key
# TOS_SECRET_KEY=your-tos-secret-key

# ===========================================
# API 配置
# ===========================================
API_V1_STR=/api/v1
PROJECT_NAME=English Tube API
VERSION=1.0.0

# ===========================================
# CORS 跨域配置（生产环境）
# ===========================================
# 替换为你的实际域名
BACKEND_CORS_ORIGINS=["https://yourdomain.com","https://admin.yourdomain.com","https://api.yourdomain.com"]

# ===========================================
# 腾讯云 VOD 视频点播配置
# ===========================================
VOD_APP_ID=1253432963
VOD_PLAY_KEY=your-vod-play-key-here
VOD_PSIGN_EXPIRE_SECONDS=3600
VOD_PSIGN_AUDIO_VIDEO_TYPE=Original
VOD_PSIGN_RAW_ADAPTIVE_DEFINITION=
VOD_PSIGN_TRANSCODE_DEFINITION=

# ===========================================
# 腾讯云短信服务配置
# ===========================================
TENCENT_SMS_SECRET_ID=your-sms-secret-id
TENCENT_SMS_SECRET_KEY=your-sms-secret-key
TENCENT_SMS_SDK_APP_ID=your-sms-app-id
TENCENT_SMS_SIGN_NAME=your-sms-signature-name
TENCENT_SMS_TEMPLATE_ID=your-sms-template-id
TENCENT_SMS_REGION=ap-guangzhou
SMS_CODE_EXPIRE_MINUTES=10
SMS_DEBUG=false
